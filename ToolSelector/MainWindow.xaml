        </Canvas>
        <Button Content="Pen" Click="Pen_Click" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Brush" Click="Brush_Click" HorizontalAlignment="Left" Margin="10,71,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
