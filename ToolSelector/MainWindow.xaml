        xmlns:local="clr-namespace:ToolSelector"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Rectangle Margin="101,10,9.6,10" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" Fill="#FFE8E3E3">
            
        </Rectangle>
        
